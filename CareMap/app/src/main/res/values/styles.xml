<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>
    <style name="generic_text_blue">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="profile_margin">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="edit_text_style">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/bluerectangle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/blue_user</item>
    </style>

    <style name="edit_text_style_profile">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_grey</item>
       <item name="android:backgroundTint">@color/grey_background</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_grey</item>
        <item name="searchHintIcon">@drawable/ic_search_grey</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="closeIcon">@drawable/ic_close_grey</item>

    </style>
    <style name="day_text_style">
        <item name="android:textSize">@dimen/s11</item>
        <item name="android:textColor">#384153</item>

    </style>
    <style name="setting_text_style">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/text_grey</item>

    </style>
    <style name="profile_text_style">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="home_text_style">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/grey</item>

    </style>
    <style name="line_style">

        <item name="android:background">@color/grey_background</item>

    </style>
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
