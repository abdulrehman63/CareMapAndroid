<layout>

    <data>

        <variable
            name="profileModel"
            type="com.square63.caremap.models.seekerModels.CreateSeekerProfileModel"></variable>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:context=".ui.providerModule.CreateProviderProfileActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/colored_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <com.square63.caremap.utils.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:onClick="onPickImageClick"
                        android:src="@drawable/profile_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Add Photo"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/generic_text_blue"
                        android:layout_marginStart="16dp"
                        android:text="Senior Name"/>

                    <EditText
                        android:id="@+id/edtName"
                        style="@style/edit_text_style_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"

                        android:inputType="numberDecimal"
                        android:text="@={profileModel.phoneNumber}"
                        android:hint=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/generic_text_blue"
                    android:layout_marginStart="16dp"
                    android:text="Age"/>

                <EditText
                    android:id="@+id/edtAge"
                    style="@style/edit_text_style_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:inputType="numberDecimal"
                    android:text="@={profileModel.phoneNumber}"
                    android:hint=""/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sex"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"

                    android:weightSum="3">
                    <TextView
                        android:id="@+id/txtMale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:background="@drawable/rectangleshadow_2x"

                        android:paddingBottom="10dp"
                        android:textColor="@color/text_grey"
                        android:drawableTop="@drawable/femaledark_2x"
                        android:drawablePadding="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txtFemail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Femail"
                        android:background="@drawable/rectangleshadow_2x"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"

                        android:textColor="@color/text_grey"
                        android:drawableTop="@drawable/maledark_2x"
                        android:drawablePadding="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txtBinary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Non Binary"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawablePadding="5dp"
                        android:background="@drawable/rectangleshadow_2x"
                        android:textColor="@color/text_grey"
                        android:drawableTop="@drawable/nonbinarydark_2x"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    style="@style/line_style"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reason for care"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                   >
                </android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    style="@style/line_style"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobility"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewMobility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    >
                </android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    style="@style/line_style"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interest"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewInterest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    >

                </android.support.v7.widget.RecyclerView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        style="@style/line_style"/>
                    <TextView
                        android:id="@+id/txtLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="16dp"
                        android:background="#f5f5f5"
                        android:padding="8dp"
                        android:textColor="#6d6d70"
                        android:gravity="center|start"
                        android:drawableEnd="@drawable/ic_back_grey"
                        android:onClick="onLanguageSelectionClick"
                        android:text="Language(s)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        style="@style/line_style"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Only approximate location will be shared to determine travel distance "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/profile_margin"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/generic_text_blue"
                            android:text="@string/number"/>

                        <EditText
                            android:id="@+id/txtNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={profileModel.number}"
                            style="@style/edit_text_style_profile"
                            android:layout_marginEnd="5dp"
                            android:hint=""/>
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="40dp"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/unitNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/generic_text_blue"
                            android:layout_marginStart="5dp"
                            android:text="@string/unit_number"/>

                        <EditText

                            android:id="@+id/edtUnitNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            style="@style/edit_text_style_profile"
                            android:text="@={profileModel.unitNumber}"
                            android:hint=""/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/profile_margin"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/generic_text_blue"
                        android:layout_marginStart="5dp"
                        android:text="@string/city"/>

                    <EditText
                        android:id="@+id/edtCity"
                        style="@style/edit_text_style_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@={profileModel.city}"
                        android:hint=""/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/profile_margin"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/generic_text_blue"
                        android:layout_marginStart="5dp"
                        android:text="@string/province"/>

                    <EditText
                        android:id="@+id/edtProvince"
                        style="@style/edit_text_style_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@={profileModel.province}"
                        android:hint=""/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/profile_margin"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/addres1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/generic_text_blue"
                        android:layout_marginStart="5dp"
                        android:text="Postal Code"/>

                    <EditText
                        android:id="@+id/edtAddress1"
                        style="@style/edit_text_style_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@={profileModel.address1}"
                        android:hint=""/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sharing approximate location will provide you with the best match of care. Click here if you wish to remove your address. Note: city will be shown "
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"/>
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do not share location "
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"

                    android:textSize="14sp"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="40dp"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile Color Scheme"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Did you know you can care for more than one senior on this app? Choosing a colour profile can help distinguish between multiple profiles"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"

                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>