<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/colored_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x16"
        android:layout_marginStart="@dimen/x16"
        android:layout_marginTop="@dimen/x16"
        android:background="@color/line_color"
        android:paddingBottom="24dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:gravity="top"
        android:paddingTop="5dp"
        android:hint="Tag Line: Make it punchy and make sure you stand out from the crowd."
        android:textSize="@dimen/s16"
        android:textColor="@color/text_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x16"
        android:layout_marginStart="@dimen/x16"
        android:layout_marginTop="@dimen/x16"
        android:background="@color/line_color"
        android:paddingBottom="24dp"
        android:paddingEnd="@dimen/x8"
        android:paddingStart="@dimen/x8"
        android:paddingTop="@dimen/x5"
        android:gravity="top"
        android:hint="Description: Tell families your story, why you are passionate about care and what makes you a reliable and dependable care provider. Add any special skills or details, i.e you cook Chinese food. Details that can help you to be discovered if someone does a key word search. "
        android:textSize="@dimen/s16"
        android:textColor="@color/text_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

</android.support.constraint.ConstraintLayout>