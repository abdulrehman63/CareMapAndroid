<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.SettingsActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="52dp"
        layout="@layout/colored_tool_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center|start"
        android:onClick="onEditProfileClick"
        style="@style/setting_text_style"
        android:drawableEnd="@drawable/ic_back_grey"
        android:text="Edit Profile"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center|start"
        android:drawableEnd="@drawable/ic_back_grey"
        android:onClick="onChangePasswordAppClick"
        style="@style/setting_text_style"
        android:text="Change Password"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
        android:drawableEnd="@drawable/ic_back_grey"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center|start"
        style="@style/setting_text_style"
        android:onClick="onShareAppClick"
        android:drawableEnd="@drawable/ic_back_grey"
        android:text="Share this App"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center|start"
        android:drawableEnd="@drawable/ic_back_grey"
        android:onClick="onTermsClick"
        style="@style/setting_text_style"
        android:text="Terms and Condition"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:onClick="onHelpClick"
        android:gravity="center|start"
        android:drawableEnd="@drawable/ic_back_grey"
        style="@style/setting_text_style"
        android:text="Help"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center|start"
        android:onClick="onLogoutClick"
        style="@style/setting_text_style"
        android:drawableEnd="@drawable/ic_back_grey"
        android:text="Logout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/line_style"
        />
</LinearLayout>